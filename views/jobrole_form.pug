extends layout

block content
	h1 #{title}

	form(method='POST' action='')
		div.form-group
			label(for='jobrole') Location ID:
			input#jobrole.form-control(type='text', placeholder='Job Role Name' name='jobrole' value=(undefined===jobrole ? '' : jobrole.Name))
		button.btn.btn-primary(type='submit') Submit

	if errors 
		ul
			for error in errors
				li!= error.msg