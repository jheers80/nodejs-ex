extends layout

block content
	h1 #{title}

	form(method='POST' action='')
		div.form-group
			label(for='storeStatus') Status:
			input#StoreStatus.form-control(type='text', placeholder='Status' name='storeStatus' value=(undefined===storeStatus ? '' : storeStatus.Status))
			
		button.btn.btn-primary(type='submit') Submit

	if errors 
		ul
			for error in errors
				li!= error.msg